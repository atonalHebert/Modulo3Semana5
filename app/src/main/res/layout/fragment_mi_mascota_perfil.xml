<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MiMascotaPerfil">

    <!--Foto de perfil de mi mascota-->
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgMiMascota"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bulbasaur"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>

    <!--Fotos de mi mascota ordenadas en forma de grid-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMiMascota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgMiMascota">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>